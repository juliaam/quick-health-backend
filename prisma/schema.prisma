generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model critical_information {
  critical_information_id      Int       @id(map: "critical_information_id_key") @default(autoincrement())
  last_name                    String?
  gender_sex                   String?
  emergency_contact            String?
  blood_type                   String?
  alergy                       String?
  medicines_used               String?
  illness                      String?
  surgery                      String?
  created_at                   DateTime? @db.Date
  critical_information_user_id Int
  user                         user      @relation(fields: [critical_information_user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction, map: "critical_information_user_id")
}

model qr_code {
  id_qr_code Int     @id(map: "id_qr_code_key") @default(autoincrement())
  image      String?
}

model user {
  user_id              Int                    @id(map: "user_id_key") @default(autoincrement())
  email                String                 @unique @db.VarChar
  password             String                 @db.VarChar
  name                 String                 @db.VarChar
  critical_information critical_information[]
}
